{
  "name": "@mediagraph/mcp",
  "version": "1.0.7",
  "description": "MCP server for Mediagraph - Media Asset Management Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mediagraph-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "mediagraph",
    "dam",
    "digital-asset-management",
    "claude",
    "ai",
    "anthropic"
  ],
  "author": "Mediagraph",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mediagraph/mediagraph-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/mediagraph/mediagraph-mcp/issues"
  },
  "homepage": "https://github.com/mediagraph/mediagraph-mcp#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
